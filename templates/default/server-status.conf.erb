<VirtualHost *:80>
        DocumentRoot /var/www
        <Directory />
                Options FollowSymLinks
                AllowOverride None
                Order deny,allow
                Deny from all
                Allow from 127. localhost ip6-localhost
        </Directory>
        <Directory /var/www/>
                Options Indexes FollowSymLinks MultiViews
                AllowOverride None
                Order deny,allow
                Deny from all
                Allow from 127. localhost ip6-localhost
        </Directory>
</VirtualHost>

<IfModule mod_status.c>

  <Location /server-status>
#    OboeSamplingRate 1000
    SetHandler server-status
    Order deny,allow
    Deny from all
    Allow from 127. localhost ip6-localhost
  </Location>

  ExtendedStatus On
</IfModule>

